<h1>Biba Objects</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Conf level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biba_objects.each do |biba_object| %>
      <tr>
        <td><%= biba_object.id %></td>
        <td><%= biba_object.conf_level %></td>
        <td><%= link_to 'Show', biba_object if biba_object.readable_by?(current_user) %></td>
        <td><%= link_to 'Edit', edit_biba_object_path(biba_object) if biba_object.writable_by?(current_user) %></td>
        <td><%= link_to 'Destroy', biba_object, method: :delete, data: { confirm: 'Are you sure?' } if biba_object.writable_by?(current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Biba Object', new_biba_object_path %>
