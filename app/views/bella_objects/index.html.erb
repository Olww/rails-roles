<h1>Bella Objects</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Conf level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bella_objects.each do |bella_object| %>
      <tr>
        <td><%= bella_object.id %></td>
        <td><%= bella_object.conf_level %></td>
        <td><%= link_to 'Show', bella_object if bella_object.readable_by?(current_user) %></td>
        <td><%= link_to 'Edit', edit_bella_object_path(bella_object) if bella_object.writable_by?(current_user) %></td>
        <td><%= link_to 'Destroy', bella_object, method: :delete, data: { confirm: 'Are you sure?' } if bella_object.writable_by?(current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bella Object', new_bella_object_path %>
